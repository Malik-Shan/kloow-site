---
// Basic Dark Testimonial section
// ------------
// Description: A centered testimonial section that contains: a quote, a caption and a cite in a dark section with a background image.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Testimonial from '../../ui/Testimonial.astro'

// Props
type Props = {
	blockquote?: string
	figcaption?: string
	cite?: string
	bg?: any
	bgPosition?: 'left' | 'right' | 'center'
}
const {
	blockquote = 'KLOOW feels like a rocket boost for our marketing. Its sleek design and powerful features make managing campaigns and team collaboration effortless.',
	figcaption = 'Sarah Mitchell',
	cite = 'Marketing Director, BrightWave Agency',
	bg,
	bgPosition = 'center'
} = Astro.props
---

<Section
	id="testimonial"
	mode="dark"
	bg={bg}
	bgPosition={bgPosition}
	classes="dark:border-t border-y border-neutral-800"
>
			<Testimonial
				blockquote={blockquote}
				figcaption={figcaption}
				cite={cite}
				align="left"
				size="4xl"
				mobileSize="2xl"
				classes="!leading-tight font-bold xl:text-5xl max-w-4xl mr-auto"
				quoteSize={112}
			/>
</Section>
