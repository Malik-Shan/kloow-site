---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import SimpleFeed from '../components/blocks/feeds/BasicFeed.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Data
import feedData from '../data/json-files/changelogData.json'

// Content
// - SEO
const SEO = {
	title: 'KLOOW | Version Updates and Improvements',
	description:
		"Explore KLOOW's latest updates designed to simplify marketing tasks, enhance collaboration, and integrate seamlessly with your favorite tools. Stay on top of new features and make the most of KLOOW today!"
}
// - Page Header
const header = {
	title: 'KLOOW Version Updates and <strong>Enhancements</strong>',
	text: 'Stay informed about all the new updates and improvements in KLOOW.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<SimpleFeed data={feedData} />
	<CTA />
</Layout>
